#include <iostream>
using namespace std;

struct Book
{
    string author;
    int pages;
    
};

int main()
{
    /*-----------Ввод данных----------
    Book *p;
    p = new Book;
    cout << "Author: ";
    cin >> p -> author;
    cout << "Pages: ";
    cin >> p -> pages;
    delete p;
    --------------Ввод данных---------*/
    
    /*------------Массив со структурой-------------
    Book *B;
    int n;
    cout << "Сколько у Вас книг? ";
    cin >> n;
    B = new Book[n];
    for ( int i = 0; i < n; i++ )
    {
        cout << "Введите данные " << i + 1 << " книги: \nАвтор: ";
        cin >> B[i].author;
        cout << "Количество страниц: ";
        cin >> B[i].pages;
        cout << endl;
    }
    for (int i = 0; i < n; i++ )
    {
        cout << "Данные о " << i + 1 << " книге:\nАвтор: " << B[i].author
             << "\nКоличество страниц: " << B[i].pages;
        cout << "\n\n";
    }
    delete B;
    ------------Массив со структурой-------------*/
    
    
}
