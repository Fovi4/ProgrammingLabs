
#include <iostream>
using namespace std;

struct Student
{
    string name, ticket, country; // Имя, номер билета, страна студента
    double avg_score; // Средний балл студента
    int age; // Возраст студента
    Student* next; // Указатель на следующий элемент
};

int main()
{
    cout << "Menu\n0 - Add info\n1 - Add info to the beginning\n2 - Add info to the end\n3 - Output the info";
    int a;
    Student *st;
    Student *head = NULL;
    cout << "\n\nEnter a command: ";
    cin >> a;
    while( a <= 6 )
    {
        switch (a)
        {
            case 0:
            {
                Student *st;
                st = new Student;
                cout << "Name: ";
                cin >> st -> name;
//               cout << "Age: ";
//                cin >> st -> age;
                cout << "Ticket number: ";
                cin >> st -> ticket;
//                cout << "Country: ";
//                cin >> st -> country;
//                cout << "Average: ";
//                cin >> st -> avg_score;
                break;
            }     
            
            case 1:
            {
                st = new Student;
                cout << "Name: ";
                cin >> st -> name;
//               cout << "Age: ";
//                cin >> st -> age;
                cout << "Ticket number: ";
                cin >> st -> ticket;
//                cout << "Country: ";
//                cin >> st -> country;
//                cout << "Average: ";
//                cin >> st -> avg_score;
                
                st -> next = head;
                head = st;
                break;
            }
            case 2:
            {
                st = new Student;
                cout << "Name: ";
                cin >> st -> name;
//               cout << "Age: ";
//                cin >> st -> age;
                cout << "Ticket number: ";
                cin >> st -> ticket;
//                cout << "Country: ";
//                cin >> st -> country;
//                cout << "Average: ";
//                cin >> st -> avg_score;
                
                Student *temp = head;
                while ( temp -> next )
                    temp = temp -> next;
                temp -> next = st;
                break;
            }
            
            case 3:
            {
                Student *temp = head;
                int i = 1;
                while ( temp )
                {
                    cout << i << temp -> name << endl;
                    i++;
                    temp = temp -> next;
                    cout << endl;
                }
                break;
            }
            
            case 4:
            {
                Student *out = head;
                int i = 1;
                while ( out )
                {
                    cout << i << ". " << out -> name << " (" << out -> ticket << ")\n";
                    i++;
                    out = out -> next;
                }
                string del_st;
                cout << "Enter ticket number to отчислить: ";
                cin >> del_st;
                Student *temp = head;
                if ( head -> ticket == del_st )
                {
                    head = head -> next;
                    cout << temp -> name << " (" << temp -> ticket << ") successfully отчислен\n";
                    delete temp;
                }
                
                else
                {
                    while ( temp -> next && temp -> next -> ticket != del_st )
                        temp = temp -> next;
                    if ( temp -> next -> ticket == del_st && temp -> next )
                    {
                        Student *st2del = temp -> next;
                        temp -> next = temp -> next -> next;
                        cout << st2del -> name << " (" << st2del -> ticket << ") successfully отчислен\n";
                        delete st2del;
                    }
                    else
                        cout << "Нормально введи да, нет такого студента. Давай теперь заного команду вводи\n";
                }
                break;
            }
            
            default:
                cout << "Ээ введи нормально да >:L";
        }
        cout << "\nEnter a command: ";
        cin >> a;
    }
    cout << "\nGoodbye >:[";
    
    return 0;
}
