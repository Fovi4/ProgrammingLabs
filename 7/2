#include <iostream>
using namespace std;

int main()
{
    int N;
    cin >> N;
    int A[N];
    for ( int i = 0; i < N; i++ )
    {
        cin >> A[i];
        if ( A[i] < 0 )
        {
            cout << "Первый отрицательный элемент: " << A[i] << "\nЕго индекс: " << i;
            return 0;
        }        
    }

    cout << "Отрицательных элементов нет";
}
